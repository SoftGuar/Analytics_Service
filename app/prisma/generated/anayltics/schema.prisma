generator client {
  provider = "prisma-client-js"
  output   = "../prisma/generated/anayltics"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Navigation_logs {
  id              Int         @id @default(autoincrement())
  user_id         Int
  environment_id  Int
  rerouting_count Int
  start_time      DateTime
  end_time        DateTime?
  zoneLogs        Zone_logs[]
  poiLogs         POI_logs[]
}

model Zone_logs {
  id                    Int      @id @default(autoincrement())
  navigation_id         Int
  zone_id               Int
  user_id               Int
  start_time            DateTime
  end_time              DateTime
  obstacles_encountered Int

  navigation Navigation_logs @relation(fields: [navigation_id], references: [id])
}

model POI_logs {
  id            Int      @id @default(autoincrement())
  navigation_id Int
  poi_id        Int
  visit_time    DateTime

  navigation Navigation_logs @relation(fields: [navigation_id], references: [id])
}

model DeviceUsageLogs {
  id             Int      @id @default(autoincrement())
  dispositive_id Int
  timestamp      DateTime
  battery_level  Int
  connected      Boolean
}

model Feedback {
  id         Int      @id @default(autoincrement())
  user_id    Int
  rating     Int // 1-5 Ã©toiles
  comment    String?
  created_at DateTime @default(now())
}

model UserSessions {
  id            Int       @id @default(autoincrement())
  user_id       Int
  session_start DateTime  @default(now())
  session_end   DateTime?
  device_id     Int?
  ip_address    String?
}
