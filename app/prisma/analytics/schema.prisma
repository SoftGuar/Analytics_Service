generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Navigation_logs {
  id              Int            @id @default(autoincrement())
  user_id         Int
  environment_id  Int
  rerouting_count Int
  start_time      DateTime
  end_time        DateTime?
  zoneLogs        Zone_logs[]
  poiLogs         POI_logs[]
}

model Zone_logs {
  id                  Int         @id @default(autoincrement())
  navigation_id       Int
  zone_id             Int
  user_id             Int
  start_time          DateTime
  end_time            DateTime
  obstacles_encountered Int

  navigation          Navigation_logs @relation(fields: [navigation_id], references: [id])
  }

model POI_logs {
  id            Int   @id @default(autoincrement())
  navigation_id Int
  poi_id        Int
  visit_time    DateTime

  navigation    Navigation_logs @relation(fields: [navigation_id], references: [id])
 }

model DeviceUsageLogs {
  id             Int      @id @default(autoincrement())
  dispositive_id Int
  timestamp      DateTime
  battery_level  Int
  connected      Boolean
}

model Feedback {
  id        Int      @id @default(autoincrement())
  user_id   Int
  rating    Int      // 1-5 Ã©toiles
  comment   String?
  created_at DateTime @default(now())
}

model UserSessions {
  id         Int      @id @default(autoincrement())
  user_id    Int
  session_start DateTime @default(now())
  session_end   DateTime?
  device_id  Int?
  ip_address String?
}

model Logs {
  id         Int       @id @default(autoincrement())
  level      String    @db.VarChar(10)
  time       DateTime
  pid        Int
  hostname   String    @db.VarChar(255)
  msg        String
  error      Json?  
  request    Json?  
  full_log   Json
  created_at DateTime  @default(now())
}
model ExecutiveReport {
  id                Int       @id @default(autoincrement()) // Primary key
  timestamp         DateTime  @default(now()) // Timestamp of the report
  service        String @default("default")
  cpu_manufacturer  String    // CPU manufacturer
  cpu_brand         String    // CPU brand
  cpu_cores         Int       // Number of CPU cores
  cpu_speed         Float     // CPU speed
  cpu_usage         Int       // CPU usage percentage
  cpu_temperature   Float?    // CPU temperature (nullable)
  memory_total      Float     // Total memory
  memory_used       Float     // Used memory
  memory_free       Float     // Free memory
  memory_swap_used  Float     // Swap used memory
  memory_cache      Float     // Cache memory
  disk_total        Float     // Total disk space
  disk_used         Float     // Used disk space
  disk_free         Float     // Free disk space
  disk_usage_percent Int      // Disk usage percentage
  network_rx_sec    Float     // Network received data per second
  network_tx_sec    Float     // Network transmitted data per second
  network_errors    Int       // Network errors
  network_dropped   Int       // Network dropped packets
  system_uptime     Float     // System uptime
  system_os         String    // Operating system
  system_kernel     String    // Kernel version
  system_hostname   String    // Hostname
}